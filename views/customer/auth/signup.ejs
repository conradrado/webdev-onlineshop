<%- include('../../shared/includes/head', {pageTitle: 'Signup'})//이거 하드코드} %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
    <%- include('../../shared/includes/header') %>
    
    <main>
        <% if (inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Authentication</h2>
                <p><%=inputData.errorMessage%></p>
            </section>
        <% } %>
        <form action='/signup' method="POST">
            <input name='_csrf' type="text" value="<%= locals.csrfToken %>" hidden>
            <h1>Create New Account</h1>
            <div>
                <label for="email">Email</label>
                <input name='email' type="email" id="email" value="<%=inputData.email%>" required>
            </div>

            <div>                    
                <label for="password">Password</label>
                <input name='password' type="password" id="password" value="<%=inputData.password%>" required>
            </div>

            <div>
                <label for="confirmPassword">Confirm Password</label>
                <input name='confirmPassword' type="password" id="confirmPassword" value="<%=inputData.confirmPassword%>" required>
            </div>
            <hr>
            <div>
                <label for="name">Name</label>
                <input name='name' id='name' type="text">
            </div>
            
            <div>
                <label for="address">Address</label>
                <input name='address' id="address" type="text">
            </div>
    
            <button class='btn'>Create Accout!</button>
            <p id="switch-login"><a href="/login">Log In</a></p>
        </form>

    </main>

<%- include('../../shared/includes/footer') %>